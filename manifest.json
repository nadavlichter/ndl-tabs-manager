{
  "manifest_version": 3,
  "name": "TabToolKit - Advanced Tab Manager",
  "version": "1.0.0",
  "description": "An elegant tab manager with smart grouping and navigation features",
  "permissions": [
    "tabs",
    "storage",
    "tabGroups"
  ],
  "host_permissions": [
    "chrome-extension://*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "navigate-tab-backward": {
      "suggested_key": {
        "default": "Alt+Left"
      },
      "description": "Navigate to previous tab in history"
    },
    "navigate-tab-forward": {
      "suggested_key": {
        "default": "Alt+Right"
      },
      "description": "Navigate to next tab in history"
    }
  }
}